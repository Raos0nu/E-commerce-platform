# EditorConfig helps maintain consistent coding styles
# across various editors and IDEs
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# Package files
[{package.json,.prettierrc,.eslintrc.json}]
indent_size = 2

